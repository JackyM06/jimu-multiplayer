{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "strictPropertyInitialization": false,
        "suppressImplicitAnyIndexErrors": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "types": [
            "node",
            "webpack-env",
            "jest"
        ],
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ]
    },
    "include": [
        "**/*.ts",
        "**/*.d.ts",
        "**/*.tsx",
        "**/*.vue"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
